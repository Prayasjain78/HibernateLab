
public class PalindromeByRecursion {
public static void main(String[] args) {
	checkPalindrom("yamay");
	checkPalindrom("malayalam");
	checkPalindrom("radra");
	
}

private static void checkPalindrom(String string) {
boolean flag=true;
for(int i=0;i<string.length();i++) {
	if(string.charAt(i)!=string.charAt(string.length()-i-1)) {
		flag=false;
	}
}
	if(flag==true) {
		System.out.println("The String "+string+" is Palindrome");
	}
	else {
		System.out.println("The String "+string+" is not Palindrome");
	}
}
}
